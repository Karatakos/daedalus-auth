{
  "include": [
    "src/**/*"
  ],

  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "types": ["node", "jest"],

    "outDir": "dist",
    "sourceMap": true,

    // TODO: Remove after migration
    //
    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // TODO: Enable after migration
    //
    "noImplicitAny": false
  },
  
  "exclude": [
    "node_modules",
    "dist"
  ],

  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  },
}
